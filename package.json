    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "eslint": "^8",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-eslint-config": "^1.0.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "5.6.3"
